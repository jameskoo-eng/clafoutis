{
  "name": "@clafoutis/shared",
  "version": "1.0.0",
  "description": "Shared utilities for Clafoutis",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint:check": "eslint src",
    "lint:write": "eslint src --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@clafoutis/eslint-config": "workspace:*",
    "@clafoutis/prettier-config": "workspace:*",
    "@types/node": "^22.15.27",
    "typescript": "^5.8.3"
  },
  "prettier": "@clafoutis/prettier-config"
}
