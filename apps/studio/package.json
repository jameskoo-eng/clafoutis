{
  "name": "@clafoutis/studio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:check": "eslint src",
    "lint:write": "eslint src --fix",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "storybook": "storybook dev -p 6006 -c src/storybook",
    "build-storybook": "storybook build -c src/storybook",
    "test:storybook": "playwright test --config=playwright.storybook.config.ts",
    "test:storybook:ui": "playwright test --config=playwright.storybook.config.ts --ui",
    "test:storybook:headed": "playwright test --config=playwright.storybook.config.ts --headed",
    "test:storybook:report": "playwright show-report test-results/storybook-report",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clafoutis/studio-core": "workspace:*",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-router": "^1.120.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.488.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "tailwind-merge": "^3.2.0",
    "vanilla-jsoneditor": "^3.11.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@clafoutis/eslint-config": "workspace:*",
    "@clafoutis/vitest-config": "workspace:*",
    "@playwright/test": "^1.50.0",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/react": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@tanstack/router-plugin": "^1.120.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "fake-indexeddb": "^6.2.5",
    "postcss": "^8.4.35",
    "storybook": "^9.1.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.4.11"
  }
}
