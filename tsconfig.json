{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "cli/**/*.ts",
    "generators/**/*.ts",
    "utils/**/*.ts",
    "schemas/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
