{
  "color": {
    "radio": {
      "bg": {
        "$type": "color",
        "$value": "{color.surface.secondary}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.border.primary}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.text.primary}"
      },
      "checked": {
        "bg": {
          "$type": "color",
          "$value": "{color.brand.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.brand.primary}"
        },
        "dot": {
          "$type": "color",
          "$value": "{color.brand.primaryForeground}"
        }
      },
      "hover": {
        "bg": {
          "$type": "color",
          "$value": "{color.palette.gray.100}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        }
      },
      "focus": {
        "ring": {
          "$type": "color",
          "$value": "{color.ring.primary}"
        }
      },
      "disabled": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.disabled.bg}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.state.disabled.border}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.state.disabled.text}"
        }
      },
      "error": {
        "border": {
          "$type": "color",
          "$value": "{color.state.error.primary}"
        }
      }
    }
  }
}
