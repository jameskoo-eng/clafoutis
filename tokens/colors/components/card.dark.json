{
  "color": {
    "card": {
      "bg": {
        "$type": "color",
        "$value": "{color.surface.primary}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.text.primary}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.border.primary}"
      },
      "shadow": {
        "$type": "shadow",
        "$value": {
          "x": 0,
          "y": 2,
          "blur": 8,
          "spread": 0,
          "color": "rgba(0, 0, 0, 0.3)"
        }
      },
      "header": {
        "text": {
          "$type": "color",
          "$value": "{color.text.primary}"
        }
      },
      "description": {
        "text": {
          "$type": "color",
          "$value": "{color.text.secondary}"
        }
      },
      "footer": {
        "text": {
          "$type": "color",
          "$value": "{color.text.secondary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        }
      }
    }
  }
}
