{
  "color": {
    "heroInput": {
      "bg": {
        "$type": "color",
        "$value": "{color.surface.secondary}"
      },
      "text": {
        "$type": "color",
        "$value": "{color.text.primary}"
      },
      "placeholder": {
        "$type": "color",
        "$value": "{color.text.placeholder}"
      },
      "border": {
        "$type": "color",
        "$value": "{color.border.primary}"
      },
      "default": {
        "ring": {
          "$type": "color",
          "$value": "{color.ring.primary}"
        }
      },
      "warning": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.warning.bg}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.state.warning.border}"
        },
        "ring": {
          "$type": "color",
          "$value": "{color.state.warning.primary}"
        },
        "icon": {
          "$type": "color",
          "$value": "{color.state.warning.primary}"
        }
      },
      "error": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.error.bg}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.state.error.primary}"
        },
        "ring": {
          "$type": "color",
          "$value": "{color.state.error.primary}"
        },
        "icon": {
          "$type": "color",
          "$value": "{color.state.error.primary}"
        }
      },
      "success": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.success.bg}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.state.success.primary}"
        },
        "ring": {
          "$type": "color",
          "$value": "{color.state.success.primary}"
        },
        "icon": {
          "$type": "color",
          "$value": "{color.state.success.primary}"
        }
      },
      "focus": {
        "ring": {
          "$type": "color",
          "$value": "{color.ring.primary}"
        }
      },
      "disabled": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.disabled.bg}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.state.disabled.text}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.state.disabled.border}"
        }
      }
    }
  }
}
