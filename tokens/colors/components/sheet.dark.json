{
  "color": {
    "sheet": {
      "overlay": {
        "$type": "color",
        "$value": "{color.background.overlay}"
      },
      "content": {
        "bg": {
          "$type": "color",
          "$value": "{color.surface.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        },
        "shadow": {
          "$type": "shadow",
          "$value": {
            "x": 0,
            "y": -4,
            "blur": 30,
            "spread": 0,
            "color": "rgba(0, 0, 0, 0.4)"
          }
        }
      },
      "header": {
        "text": {
          "$type": "color",
          "$value": "{color.text.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        }
      },
      "description": {
        "text": {
          "$type": "color",
          "$value": "{color.text.secondary}"
        }
      },
      "footer": {
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        }
      },
      "closeButton": {
        "text": {
          "$type": "color",
          "$value": "{color.icon.muted}"
        },
        "hover": {
          "$type": "color",
          "$value": "{color.state.ghost.hover}"
        }
      }
    }
  }
}
