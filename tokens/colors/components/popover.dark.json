{
  "color": {
    "popover": {
      "content": {
        "bg": {
          "$type": "color",
          "$value": "{color.surface.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        },
        "shadow": {
          "$type": "shadow",
          "$value": {
            "x": 0,
            "y": 4,
            "blur": 12,
            "spread": 0,
            "color": "rgba(0, 0, 0, 0.4)"
          }
        }
      },
      "arrow": {
        "$type": "color",
        "$value": "{color.surface.primary}"
      }
    }
  }
}
