{
  "color": {
    "badge": {
      "default": {
        "bg": {
          "$type": "color",
          "$value": "{color.brand.primary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.brand.primaryForeground}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      },
      "secondary": {
        "bg": {
          "$type": "color",
          "$value": "{color.brand.secondary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.brand.secondaryForeground}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      },
      "destructive": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.error.primary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.state.error.foreground}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      },
      "outline": {
        "bg": {
          "$type": "color",
          "$value": "transparent"
        },
        "text": {
          "$type": "color",
          "$value": "{color.text.primary}"
        },
        "border": {
          "$type": "color",
          "$value": "{color.border.primary}"
        }
      },
      "success": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.success.primary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.state.success.foreground}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      },
      "warning": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.warning.primary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.state.warning.foreground}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      },
      "info": {
        "bg": {
          "$type": "color",
          "$value": "{color.state.info.primary}"
        },
        "text": {
          "$type": "color",
          "$value": "{color.palette.white}"
        },
        "border": {
          "$type": "color",
          "$value": "transparent"
        }
      }
    }
  }
}
